{
  "name": "edge_detector",
  "modules": [
    "sensors:v4l2_camera",
    "sight",
    "viewers"
  ],
  "graph": {
    "nodes": [
      {
        "name": "camera",
        "components": [
          {
            "name": "MessageLedger",
            "type": "isaac::alice::MessageLedger"
          },
          {
            "name": "V4L2Camera",
            "type": "isaac::V4L2Camera"
          }
        ]
      },
      {
        "name": "viewer",
        "components": [
          {
            "name": "MessageLedger",
            "type": "isaac::alice::MessageLedger"
          },
          {
            "name": "ImageViewer",
            "type": "isaac::viewers::ImageViewer"
          }
        ]
      },
      {
        "name":"edge_detector",
        "components":[
          {
            "name":"MessageLedger",
            "type":"isaac::alice::MessageLedger"
          },
          {
            "name":"EdgeDetector",
            "type":"isaac::alice::PyCodelet"
          }
        ]
      }
    ],
    "edges": [
      {
        "source": "camera/V4L2Camera/frame",
        "target": "edge_detector/EdgeDetector/iimage"
      },
      {
        "source":"edge_detector/EdgeDetector/oimage",
        "target": "viewer/ImageViewer/image"
      }
    ]
  },
  "config": {
    "camera": {
      "V4L2Camera": {
        "device_id": 2,
        "rows": 480,
        "cols": 640,
        "rate_hz": 30
      }
    },
    "websight": {
      "WebsightServer": {
        "port": 3000,
        "ui_config": {
          "windows": {
            "Camera": {
              "renderer": "2d",
              "channels": [
                { "name": "edge_detector/viewer/ImageViewer/image" }
              ]
            }
          }
        }
      }
    }
  }
}
